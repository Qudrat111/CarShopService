<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="qudratilla">
        <comment>This table stores car details including make, model, year, condition, and price.</comment>
        <createTable tableName="cars" schemaName="cars_schema">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="make" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="model" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="year" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="condition" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="decimal">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="qudratilla">
        <comment>This table records orders, linking cars with users and tracking order status and date.</comment>
        <createTable tableName="orders" schemaName="orders_schema">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="car_id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="qudratilla">
        <comment>This table holds user information including username, password, and role.</comment>
        <createTable tableName="users" schemaName="users_schema">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints primaryKey="true"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
